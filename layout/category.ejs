<% var categoryName = page.path.split('/')[1] %>
<% page.title = categoryName + '分类' %>

<div class="col-mb-12 col-8" id="main" role="main">
    <!-- archive title -->
    <h3 class="archive-title">分类 <%- categoryName %> 下的文章</h3>
    <!-- end archive title -->

    <!-- post list -->
    <% page.posts.each(post => { %>
    <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
        <!-- post title -->
        <h2 class="post-title" itemprop="name headline">
            <a itemprop="url" href="<%- url_for(post.path) %>"
                ><%- post.title %></a
            >
        </h2>
        <!-- end post title -->

        <!-- post meta -->
        <ul class="post-meta">
            <li itemprop="author" itemscope itemtype="http://schema.org/Person">
                作者:
                <a itemprop="name" href="#" rel="author"
                    ><%- config.author %></a
                >
            </li>
            <li>
                时间:
                <time
                    itemprop="datePublished"
                    datetime="<%- date_xml(post.date) %>"
                    ><%- date(post.date, config.date_format) %></time
                >
            </li>
        </ul>
        <!-- end post meta -->

        <!-- post content -->
        <div class="post-content index-post-content" itemprop="articleBody">
            <%- excerpt_clean(post.content, theme.excerpt_length) %>
        </div>
        <!-- end post content -->
    </article>
    <% }) %>
    <!-- end post list -->

    <!-- pagination -->
    <%- include('pagination', { 
        prefix_url_path: url_for('categories/' + categoryName + '/')
    }) %>
    <!-- end pagination -->
</div>
